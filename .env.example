# Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=AI Railway Wagon Detection
APP_ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# GPU Settings
CUDA_VISIBLE_DEVICES=0
USE_GPU=true

# Model Paths
YOLO_MODEL_PATH=./yolov8n.pt
DEBLUR_MODEL_PATH=./checkpoints/nafnet_best.pth

# Processing Settings
BATCH_SIZE=8
MAX_IMAGE_SIZE=1920
CONFIDENCE_THRESHOLD=0.5

# OCR Settings
OCR_LANGUAGES=en
OCR_GPU=true

# Output Paths
OUTPUT_DIR=./output
LOG_DIR=./logs

# API Settings
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
